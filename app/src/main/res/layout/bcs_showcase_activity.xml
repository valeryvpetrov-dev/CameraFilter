<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/brightnessLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="Brightness"
        app:layout_constraintBottom_toTopOf="@+id/brightness"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:layout_constraintVertical_chainStyle="packed" />

    <SeekBar
        android:id="@+id/brightness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:max="100"
        android:min="0"
        android:progress="@integer/bcs_seek_bar_default_progress"
        app:layout_constraintBottom_toTopOf="@+id/contrastLabel"
        app:layout_constraintTop_toBottomOf="@+id/brightnessLabel"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/contrastLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="Contrast"
        app:layout_constraintBottom_toTopOf="@+id/contrast"
        app:layout_constraintTop_toBottomOf="@+id/brightness" />

    <SeekBar
        android:id="@+id/contrast"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:max="100"
        android:min="0"
        android:progress="@integer/bcs_seek_bar_default_progress"
        app:layout_constraintBottom_toTopOf="@+id/saturationLabel"
        app:layout_constraintTop_toBottomOf="@+id/contrastLabel"
        tools:targetApi="o" />

    <TextView
        android:id="@+id/saturationLabel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:text="Saturation"
        app:layout_constraintBottom_toTopOf="@+id/saturation"
        app:layout_constraintTop_toBottomOf="@+id/contrast" />

    <SeekBar
        android:id="@+id/saturation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@android:color/white"
        android:max="100"
        android:min="0"
        android:progress="@integer/bcs_seek_bar_default_progress"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/saturationLabel"
        tools:targetApi="o" />

</androidx.constraintlayout.widget.ConstraintLayout>
